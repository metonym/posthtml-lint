{
  "name": "posthtml-lint",
  "version": "0.1.0",
  "license": "MIT",
  "description": "PostHTML plugin to lint static markup",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "develop": "tsc -w",
    "build": "tsc -p tsconfig.prod.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "lint": "tslint --fix -p . -c tslint.json",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "posthtml": "^0.11.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/posthtml-lint.git"
  },
  "homepage": "https://github.com/metonym/posthtml-lint",
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "lint"
  ],
  "files": [
    "lib/"
  ],
  "bugs": "https://github.com/metonym/posthtml-lint/issues"
}
